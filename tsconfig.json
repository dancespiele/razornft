{
    "compilerOptions": {
        "lib": ["ES7", "DOM"],
        "jsx": "react",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build", "cache", "artifacts"],
    "include": ["src/**/*.ts", "/src/**/*.d.ts"]
}